<div class="rel" data-component="slider">
  <div class="slider ph20 m:ph40 l:ph80 js-slider">
    <ul class="f0 nowrap mhn10">
      {{ slides }}
    </ul>
  </div>
  <div
    class="slider__prev abs top left bottom y pen z2 js-wrap"
    style="opacity: 0; visibility: hidden;"
  >
    <div class="rel x y">
      <button class="slider__prev__button df jcc aic abs left ml15 pea js-buttons" data-prev>
        <svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
