<div class="m:df ph20 m:ph40 l:ph80 pt90 s:pt150 m:pt185">
  <div class="m:w50 m:pr30 l:pr75">
    <h2 class="mono f16 l:f18 lh155 mb10 m:mb15">{{ label }}</h2>
    <h3 class="serif f36 lh125 mb20 m:mb40">{{ title }}</h3>
    {% if metadata %}
      {{ metadata }}
    {% endif %}
    <div class="xs:max-w305">
      {% include lazy-image,
        image: image,
        containerCx: 'r--4x3 br4 oh mb10',
        imgCx: 'x y o-cover',
        width: 620,
        padding: false
      %}
      {% if image.caption %}
        <p class="f14 m:f16 lh155 ls01em m:ls02em o80">{{ image.caption }}</p>
      {% endif %}
    </div>
  </div>
  <div class="m:w50 m:pl15 pt40 mb165">
    <div class="rich-text f16 l:f18 lh155 ls01em l:ls02em">
      {{ editorial }}
    </div>
    {% if additionalContent %}
      {{ additionalContent }}
    {% endif %}
  </div>
</div>